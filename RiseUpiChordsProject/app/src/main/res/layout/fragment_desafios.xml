<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesafiosFragment"
    android:background="@color/dark_blue">
    <!--COMEÇO DOS BOTÃO SUPERIORES -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_desafios_desafios"
        android:text="Desafios"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_desafios"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_conquistas_desafios"
        android:text="Conquistas"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2_desafios"
        />
    <!--FIM DOS BOTÃO SUPERIORES -->

    <View
        android:id="@+id/rectangle_Desafios"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_desafios"
