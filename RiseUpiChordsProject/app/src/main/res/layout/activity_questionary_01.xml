<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/Mais_topBar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_topbar"
        />

    <ImageView
        android:layout_width="132dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/Mais_topBar"
        app:layout_constraintTop_toTopOf="@id/Mais_topBar"
        app:layout_constraintBottom_toBottomOf="@id/Mais_topBar"
        app:layout_constraintStart_toStartOf="@id/Mais_topBar"
        android:layout_gravity="center|top"
        android:src="@drawable/img_logo_ichords"/>

    <TextView
        android:id="@+id/selecione_u"
        android:layout_width="347dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Mais_topBar"
        android:layout_marginTop="85dp"
        android:text="Selecione um ou mais estilos musicais que vocÃª gostaria de tocar"
        android:textAppearance="@style/selecione_u"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
